<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cybereyestudios.bettertogether.ProfileFragment">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:id="@+id/textViewProfileUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:padding="8dp"
        android:textSize="24pt" />

    <TextView
        android:id="@+id/textViewProfileBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewProfileUsername"
        android:fontFamily="sans-serif-medium"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:textSize="10pt" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewProfileTags"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/textViewProfileBio"
        android:padding="8dp" />

    <LinearLayout
        android:id="@+id/linearLayoutAddTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyclerViewProfileTags">

        <Button
            android:id="@+id/buttonEditTags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_tags" />

    </LinearLayout>

</RelativeLayout>
